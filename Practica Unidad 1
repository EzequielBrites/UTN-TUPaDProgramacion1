#Entrada / Proceso
nombre = input("¿Como te llamas?\n") 
apellido = input("¿Cual es tu apellido?\n")
edad = input("¿Cuantos años tienes?\n")
residencia = input("¿Cual es tu lugar de residencia?\n")

